<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.christhiansalas.geometrics.Main2Activity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tv_cuadrado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/cuadrado"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:layout_below="@+id/tv_cuadrado"
        android:id="@+id/imv_cuadrado"
        android:layout_width="300px"
        android:layout_height="300px"
        android:background="@drawable/mario03"
        android:layout_centerInParent="true"

        />

    <TextView
        android:id="@+id/tv_medida"
        android:layout_below="@+id/imv_cuadrado"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="¿Cuánto mide por lado?"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/et_ladoC"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="@color/colorAccent"
        android:layout_alignTop="@+id/tv_medida"
        android:layout_toEndOf="@+id/tv_medida"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/btn_proceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/et_ladoC"
        android:text="Proceso"/>

    <TextView
        android:id="@+id/tv_perimetro"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_proceso"/>

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_perimetro"/>

</RelativeLayout>